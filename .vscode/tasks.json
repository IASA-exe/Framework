{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "gcc ${file}",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Execute",
            "type": "shell",
            "command": "a.exe",
        },
        {
            "label": "Run",
            "type": "shell",
            "command":[
                "gcc ${file} && a.exe",
            ],
        }
    ]
}